<div class="modal fade modal-lg" id="{{ modal.id }}" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fs-4">{{ modal.title }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
<div class="modal-body">
  <label for="basic-url" class="form-label fs-5">Client Info</label>
  <div class="input-group mb-3">
  <span class="input-group-text" id="basic-addon1">Name</span>
  <input type="text" name="name" class="form-control" placeholder="" aria-label="Name" aria-describedby="basic-addon1" readonly>
  <span class="input-group-text" id="basic-addon1"><i class="bi bi-telephone-x-fill"></i></span>
  <input type="text" name="number" class="form-control" placeholder="" aria-label="phone number" aria-describedby="basic-addon1" readonly>
  <span class="input-group-text" id="basic-addon1">Email</span>
  <input type="text" name="email" class="form-control" placeholder="" aria-label="Client name" aria-describedby="basic-addon1" readonly>
</div>
<div class="input-group mb-3">
  <span class="input-group-text" id="basic-addon1">City</span>
  <input type="text" name="city" class="form-control" placeholder="" aria-label="City" aria-describedby="basic-addon1" readonly>
  <span class="input-group-text" id="basic-addon1">State/Province</i></span>
  <input type="text" name="state" class="form-control" placeholder="" aria-label="State" aria-describedby="basic-addon1" readonly>
  <span class="input-group-text" id="basic-addon1">Country</span>
  <input type="text" name="country" class="form-control" placeholder="" aria-label="Country" aria-describedby="basic-addon1" readonly>
</div>

<label for="basic-url" class="form-label fs-5">Jobs</label>
<div class="input-group mb-3">
  <span class="input-group-text" id="basic-addon1">Job total</span>
  <input type="text" name="jobtotal" class="form-control" aria-label="Job total" aria-describedby="basic-addon1" readonly>
  {# <span class="input-group-text" id="basic-addon1">Most recent</i></span>
  <input type="text" name="latest" class="form-control" aria-label="Most Recent" aria-describedby="basic-addon1" readonly> #}
</div>
