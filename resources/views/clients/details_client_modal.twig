        <div>
            <table id="jobDetailsTable" class="row-border hover compact order-column stripe">
                <thead>
                    <tr>
                        <th>Due Date</th>
                        <th>Job type</th>
                        <th>Bill</th>
                        <th>Status</th>
                        <th>Staff</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>

        <div>
            <label for="basic-url" class="form-label fs-5">Payment Status</label>
            <table id="paystatusTable" class="row-border hover compact order-column stripe">
                <thead>
                    <tr>
                        <th>Bill</th>
                        <th>Paid</th>
                        <th>Balance</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>

<label for="basic-url" class="form-label fs-5">Other</label>
<div class="input-group mb-3">
  <span class="input-group-text" id="basic-addon1">Client Account Created and Managed by</span>
  <input type="text" name="staff" class="form-control" aria-label="Staff" aria-describedby="basic-addon1" readonly>
</div>
<div class="input-group mb-3">
  <span class="input-group-text" id="basic-addon1">Created At</i></span>
  <input type="text" name="createdAt" class="form-control" aria-label="Created At" aria-describedby="basic-addon1" readonly>
  <span class="input-group-text" id="basic-addon1">Last updated at</span>
  <input type="text" name="updatedAt" class="form-control" aria-label="Updated At" aria-describedby="basic-addon1" readonly>
</div>

<label for="basic-url" class="form-label fs-5">Payment</label>
<div class="input-group mb-3">
  <span class="input-group-text" id="basic-addon1">Overall Bills</span>
  <input type="text" name="allbills" class="form-control" aria-label="Bill" aria-describedby="basic-addon1" readonly>
  <span class="input-group-text" id="basic-addon1">Overall Payments</i></span>
  <input type="text" name="allpayments" class="form-control" aria-label="paid" aria-describedby="basic-addon1" readonly>
  <span class="input-group-text" id="basic-addon1">Outstanding</span>
  <input type="text" name="balance" class="form-control" aria-label="balance" aria-describedby="basic-addon1" readonly>
</div>

        <div>
            <table id="paymentDetailsTable" class="row-border hover compact order-column stripe">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Amount</th>
                        <th>Method</th>
                        <th>Staff</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>


        </div>
            <div class="modal-footer px-5">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i>
                    Close
                </button>
                <button type="button" class="btn bg-primary text-white client-details-btn disabled">
                    <i class="bi bi-check-circle me-1"></i>
                    Print
                </button>
            </div>
        </div>
    </div>
</div>
